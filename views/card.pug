div(class='p-3 ')
    div(class='col card-width card')
        div(class='  p-3 text-center ')
            a(href="goods?id="+val['id'])
                h5(class='card-title card-titles  text-center') #{val['name']}
                img(
                    src='images/'+val['image']
                    class='card-img  mt-100'
                )
                p(class='text-center text-success') #{val['cost'].toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$& ')} руб
            p(class='card-text ')
                button(
                data-goods_id = val['id']
                class='btn btn-primary add-to-cart'
                ) В корзину