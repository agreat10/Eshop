include header.pug

div(class='wrap')
  div(class='content')
    header(class='site-header')
      include site_header_order.pug

    div(class='container')
      div(class='row')
        div(class='col col-md-12')
          h3(class="cart-header") Корзина
          div(id='cart-nav')
        div(class='col col-md-12')
          h3 Создание заказа 
        div(class='col col-md-6')
          form#lite-shop-order(action="")
                  div(class='form-label ')
                    label(for='username') Имя
                    input(
                        type='text',
                        id='username',
                        class='form-control',
                        placeholder='Введите ваше имя',
                        )
                  p
                  div(class='form-label ')
                    label(for='phone') Телефон
                    input(
                        type='text',
                        id='phone',
                        class='form-control',
                        placeholder='+79806234777',
                        )
                  p
                  div(class='form-label ')
                    label(for='email') Email
                    input(
                        type='text',
                        id='email',
                        class='form-control',
                        placeholder='mail@example.com',
                        )
                  p
                  div(class='form-label ')
                    label(for='address') Адрес
                    textarea(
                        id='address',
                        class='form-control',
                        placeholder='ваш адрес',
                        )
                  p
                  div(class='form-label ')
                    label(for='rule') 
                      input(
                          type='checkbox',
                         
                          id='rule',
                          value='1'
                          ) 
                      span  Условия и положения
                  div(class=' text-right')
                    button(class='btn btn-primary', type='submit', id='clear-cart-button') Заказать
    //include nav.pug

  include footer.pug
  script(src='js/order.js')

